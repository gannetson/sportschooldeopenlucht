{% tplhandlebars "my_project_list" %}

    <div class="container" id="project-dashboard">
    
    	{{partial "my_project_top"}}
    	
        <div class="wrapper">
            {{#if isLoading}}
                <span class="loading-big"></span>
            {{else}}
            	<h1 class="pink">{% trans "My Projects" %}</h1>
                {{#if canPitchNew}}
                    {{#linkTo "myPitchNew" tagName="button" class="btn btn-primary btn-iconed"}}
                        <em class="flaticon solid lightbulb-3"></em>
                        {% trans "Pitch your smart idea." %}
                    {{/linkTo}}
                {{/if}}
            {{/if}}
            
            <div class="content">
	            <ul class="donation-projects">
	            	{{#each project in controller}}
	                <li class="donation-project">
				            {{#if project.isPhasePitch}}
	                            <img {{bindAttr src="project.pitch.image.square" alt="project.pitch.title"}} class="project-image" />
	                        {{else}}
	                            <img {{bindAttr src="project.plan.image.square" alt="project.pitch.title"}} class="project-image" />
	                        {{/if}}
				            <h2>
				                {{ project.title }}
				                <em class="project-status">
			                        {{#if project.isPublic}}
			                            <a {{action "showProject" project.id href=true}}>
			                                <em class="flaticon solid eye-1"></em>
			                                {% trans "View public page" %}
			                            </a>
			                        {{/if}}
				                </em>
				            </h2>
				
				        <p class="project-actions">
				        	{% trans "Phase" %}: <strong>{{ project.phase }}</strong> | 
			                {{#if project.isPhasePitch}}
			                	{% trans "Status:" %} <strong>{{project.plan.status}}</strong></p>
                                {{#if project.pitch.isBeingReviewed}}
								{% trans "Your pitch is in review now." %}
								  <br/>
								  {% trans "We'll get back to you soon!" %} 
								{{else}}
	                              {{#linkTo "myProjectPitch.basics" project tagName="a" class="btn btn-iconed right"}}
	                                <em class="flaticon solid pencil-3"></em>
	                                {% trans "Continue pitch" %}
	                              {{/linkTo}}
								{{/if}}
	                        {{/if}}
	
	                        {{#if project.isPhasePlan}}
	                            {% trans "Status:" %} <strong>{{project.plan.status}}</strong></p>
	                            {{#linkTo "myProjectPlan" project tagName="a" class="btn btn-iconed right"}}
	                                <em class="flaticon solid pencil-3"></em>
	                                {% trans "Continue plan" %}
	                            {{/linkTo}}
	                        {{/if}}
	
	                        {{#if project.isPhaseCampaign}}
	                            {% trans "Status:" %} <strong>{{project.campaign.status}}</strong></p>
	                            {{#linkTo "myProjectCampaign" project tagName="a" class="btn btn-iconed right"}}
	                                <em class="flaticon solid pencil-3"></em>
	                                {% trans "Campaigning" %}
	                            {{/linkTo}}
	                        {{/if}}
				        </p>
				    </li>
					{{/each}}
	            </ul>
			</div>
        </div>
    </div>

{% endtplhandlebars %}


